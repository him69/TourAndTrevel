        .packges_info {
            position: absolute;
            width: calc(100% - 1.5rem);
            left: 0;
            bottom: 16px;
            z-index: 2;
            left: 50%;
            transform: translateX(-50%);
        }

        .bagde-flag-wrap {
            position: absolute;
            top: 20px;
            left: -12px;
        }

        .bagde-flag-wrap::before {
            content: "";
            position: absolute;
            top: 35px;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 12px 12px 0;
            border-color: transparent #0CB2A7 transparent transparent;
        }

        .bagde-flag {
            text-transform: capitalize;
            color: #ffffff;
            background: #0CB2A7;
            letter-spacing: 0;
            font-size: 14px;
            line-height: 15px;
            font-weight: 600;
            padding: 10px 15px;
            display: block;
            text-decoration: none;
