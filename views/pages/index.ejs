            transition: all .3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            z-index: 1;
            border: 1px solid transparent;
            /* border: 1px solid; */
        }

        .packges_info {
            position: absolute;
            width: calc(100% - 1.5rem);
            left: 0;
            bottom: 16px;
            z-index: 2;
            left: 50%;
            transform: translateX(-50%);
        }

        .bagde-flag-wrap {
            position: absolute;
            top: 20px;
            left: -12px;
        }

        .bagde-flag-wrap::before {
            content: "";
            position: absolute;
            top: 35px;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 12px 12px 0;
            border-color: transparent #0CB2A7 transparent transparent;
        }

        .bagde-flag {
            text-transform: capitalize;
            color: #ffffff;
            background: #0CB2A7;
            letter-spacing: 0;
            font-size: 14px;
            line-height: 15px;
            font-weight: 600;
            padding: 10px 15px;
            display: block;
            text-decoration: none;
        }

        img.wide,
        img.tall {
            max-width: 100%;
            display: block;
            height: auto;
        }

        .gallery-grid img {
            border-radius: 10px;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(4, minmax(77px, 1fr));
            gap: 7px;
            grid-auto-rows: 111px;
            grid-auto-flow: dense;
            align-items: stretch;
            justify-items: center;
            margin: 0;
            padding: 0;
        }

        .wide {
            grid-column: span 1;
        }

        .tall {
            grid-row: span 2;
        }
        
