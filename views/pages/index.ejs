            max-width: 100%;
            display: block;
            height: auto;
        }

        .gallery-grid img {
            border-radius: 10px;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(4, minmax(77px, 1fr));
            gap: 7px;
            grid-auto-rows: 111px;
            grid-auto-flow: dense;
            align-items: stretch;
            justify-items: center;
            margin: 0;
            padding: 0;
        }

        .wide {
            grid-column: span 1;
        }

        .tall {
            grid-row: span 2;
