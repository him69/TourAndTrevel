    <style>
        @keyframes oscillate {
            0% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0);
            }
        }

        .oscillate {
            animation: oscillate 2s ease-in-out infinite;
            /* Adjust duration and timing as needed */
        }

        .card_p:hover .tr {
            transform: translateX(100%);
            transition: all .3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            z-index: 9;
            border-color: #dee2e6;
            /* border: 1px solid; */
        }

        .packges_box .card_p:last-child:hover .tr {
            transform: translateX(-100%);
            transition: all .3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            z-index: 9;
            border-color: #dee2e6;
