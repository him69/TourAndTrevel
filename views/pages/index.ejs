            });
            document.addEventListener('DOMContentLoaded', function () {
                var mainSlider = new Splide('.main-slider', {
                    // Your main slider options here
                    type: 'fade',
                    heightRatio: 0.48,
                    pagination: false,
                    arrows: false,
                    cover: true,
                    breakpoints: {
                        600: {
                            heightRatio: 0.7,
                        },
                    }
                }).mount();

                var thumbnailSlider = new Splide('.thumbnail-slider', {
                    // Your thumbnail slider options here
                    fixedWidth: 220,
                    fixedHeight: 126,
                    isNavigation: true,
                    gap: 20,
                    arrows: false,
                    // focus       : 'center',
                    pagination: false,
                    cover: true,
                    breakpoints: {
                        600: {
                            fixedWidth: 66,
                            fixedHeight: 40,
                        },
                    }
                }).mount();

                mainSlider.sync(thumbnailSlider);

                thumbnailSlider.on('click', function (slide) {
                    mainSlider.go(slide.index);
                });

                var splide = new Splide('.destination-slider', {
                    type: 'fade',
                    fixedHeight: 300,
                    fixedWidth: '100%',
                    pagination: false,
                    arrows: true,
                    cover: true,
                    type: 'fade',
                    rewind: true,
                    autoplay: true,
                });

                splide.mount();
            });

        </script>